@model EvaDemo.Shop.Models.Register.VM

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<h4>Welcome to join us!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="RegisterSubmit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="UserName" class="control-label">UserName*</label>
				<input asp-for="UserName" class="form-control" />
				<span asp-validation-for="UserName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Password" class="control-label">Password*</label>
				<input asp-for="Password" class="form-control" type="password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			@*<div class="form-group">
				<label asp-for="ConfirmPassword" class="control-label">ConfirmPassword*</label>
				<input asp-for="ConfirmPassword" class="form-control" type="password" />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>*@
			<div class="form-group">
				<input type="submit" value="Submit" class="btn btn-default" />
			</div>
		</form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
